{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "nix": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Disable JavaScript Runtime Updates.",
      "matchDatasources": ["node-version", "deno"],
      "enabled": true
    },
    {
      "description": "Disable JavaScript Package Manager Updates.",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["pnpm", "npm", "yarn"],
      "enabled": false
    },
    {
      "description": "Sync @types/node with Node.js.",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@types/node"],
      "versioning": "node"
    }
  ],
  "customManagers": [{
    "customType": "jsonata",
    "fileFormat": "json",
    "managerFilePatterns": [
      "/(^|/)package\\.json$/"
    ],
    "versioning": "node",
    "matchStrings": [
      "($engines := $type(devEngines) = \"array\" ? devEngines : [devEngines]; $node := $engines.runtime[name = \"node\"]; $exists($node) ? { \"currentValue\": $node.version, \"packageName\": \"node\", \"datasource\": \"node-version\" } : undefined)"
    ]
  }]
}
